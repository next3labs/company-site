<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- SEO Meta Tags -->
  <title>{{ title }} | {{ site.title }}</title>
  <meta name="description" content="{{ description or site.description }}">
  <meta name="keywords" content="{{ keywords or 'software development singapore, linux server rescue, devops singapore, custom software, server emergency, system optimization, technical consulting, next3labs' }}">
  <meta name="author" content="{{ site.author }}">
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">

  <!-- Open Graph Meta Tags -->
  <meta property="og:type" content="{{ ogType or 'website' }}">
  <meta property="og:title" content="{{ title }} | {{ site.title }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:site_name" content="{{ site.title }}">
  <meta property="og:locale" content="en_SG">
  <meta property="og:image" content="{{ ogImage or site.url + '/assets/images/next3labs-og-image.png' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="{{ title }} | {{ site.title }}">

  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }} | {{ site.title }}">
  <meta name="twitter:description" content="{{ description or site.description }}">
  <meta name="twitter:image" content="{{ ogImage or site.url + '/assets/images/next3labs-og-image.png' }}">
  <meta name="twitter:image:alt" content="{{ title }} | {{ site.title }}">

  <!-- Structured Data (JSON-LD) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{ site.company.legalName }}",
    "alternateName": "{{ site.title }}",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/assets/images/next3labs-logo.png",
    "description": "{{ site.description }}",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "{{ site.company.address.street }}",
      "addressLocality": "{{ site.company.address.city }}",
      "postalCode": "{{ site.company.address.postal }}",
      "addressCountry": "SG"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+65-8772-1895",
      "contactType": "customer service",
      "areaServed": "SG",
      "availableLanguage": "en"
    },
    "sameAs": [
      "https://www.linkedin.com/company/next3labs",
      "https://github.com/next3labs"
    ]
  }
  </script>

  {% if breadcrumbs %}
  <!-- Breadcrumb Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ site.url }}"
      }
      {% for crumb in breadcrumbs %},
      {
        "@type": "ListItem",
        "position": {{ loop.index + 1 }},
        "name": "{{ crumb.name }}",
        "item": "{{ site.url }}{{ crumb.url }}"
      }
      {% endfor %}
    ]
  }
  </script>
  {% endif %}

  {% if structuredData %}
  <!-- Additional Structured Data -->
  <script type="application/ld+json">
  {{ structuredData | safe }}
  </script>
  {% endif %}

  <link rel="stylesheet" href="/assets/css/style.css">

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-KBERM3VWPC"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-KBERM3VWPC');
  </script>
</head>
<body>
  {% include "header.njk" %}

  <main>
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <script src="/assets/js/main.js"></script>
</body>
</html>
